{
  "name": "@foxui/text",
  "private": false,
  "version": "0.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "build:package": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "prepack": "svelte-kit sync && svelte-package && node ./scripts/cleanup.js",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint ."
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./src/lib/types.d.ts",
      "svelte": "./src/lib/index.ts"
    }
  },
  "types": "./src/lib/types.d.ts",
  "svelte": "./src/lib/index.ts",
  "publishOverrides": {
    "files": [
      "dist"
    ],
    "svelte": "./dist/index.js",
    "exports": {
      ".": {
        "types": "./dist/types.d.ts",
        "svelte": "./dist/index.js"
      }
    },
    "types": "./dist/types.d.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.1",
    "@sveltejs/adapter-auto": "^7.0.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.2.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.53.2",
    "svelte-check": "^4.4.3",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@foxui/core": "workspace:*",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-bubble-menu": "^3.20.0",
    "@tiptap/extension-code-block-lowlight": "^3.20.0",
    "@tiptap/extension-document": "^3.20.0",
    "@tiptap/extension-dropcursor": "^3.20.0",
    "@tiptap/extension-history": "^3.20.0",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-paragraph": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/extension-strike": "^3.20.0",
    "@tiptap/extension-text": "^3.20.0",
    "@tiptap/extension-typography": "^3.20.0",
    "@tiptap/extension-underline": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "@tiptap/suggestion": "^3.20.0",
    "bits-ui": "^2.16.2",
    "lowlight": "^3.3.0",
    "state": "link:@tiptap/pm/state",
    "svelte-tiptap": "^3.0.1",
    "tippy.js": "^6.3.7"
  },
  "peerDependencies": {
    "svelte": ">=5",
    "tailwindcss": ">=3"
  },
  "description": "ui kit - svelte 5 + tailwind 4 - text components",
  "homepage": "https://flo-bit.dev/ui-kit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flo-bit/ui-kit.git"
  },
  "author": "flo-bit (http://flo-bit.dev/)",
  "bugs": "https://github.com/flo-bit/ui-kit/issues",
  "license": "MIT"
}