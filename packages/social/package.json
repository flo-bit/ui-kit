{
  "name": "@foxui/social",
  "private": false,
  "version": "0.4.6",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "build:package": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "prepack": "svelte-kit sync && svelte-package && node ./scripts/cleanup.js",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint ."
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./src/lib/types.d.ts",
      "svelte": "./src/lib/index.ts"
    }
  },
  "types": "./src/lib/types.d.ts",
  "svelte": "./src/lib/index.ts",
  "publishOverrides": {
    "files": [
      "dist"
    ],
    "svelte": "./dist/index.js",
    "exports": {
      ".": {
        "types": "./dist/types.d.ts",
        "svelte": "./dist/index.js"
      }
    },
    "types": "./dist/types.d.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.1.5",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6"
  },
  "dependencies": {
    "@atproto/api": "^0.15.5",
    "@foxui/core": "workspace:*",
    "@foxui/time": "workspace:*",
    "@use-gesture/vanilla": "^10.3.1",
    "bits-ui": "^1.4.3",
    "emoji-picker-element": "^1.26.3",
    "hls.js": "^1.6.2",
    "is-emoji-supported": "^0.0.5",
    "plyr": "^3.7.8"
  },
  "peerDependencies": {
    "svelte": ">=5",
    "tailwindcss": ">=3"
  },
  "description": "ui kit - svelte 5 + tailwind 4 - social components",
  "homepage": "https://flo-bit.dev/ui-kit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flo-bit/ui-kit.git"
  },
  "author": "flo-bit (http://flo-bit.dev/)",
  "bugs": "https://github.com/flo-bit/ui-kit/issues",
  "license": "MIT"
}